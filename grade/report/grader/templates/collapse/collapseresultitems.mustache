<li class="w-100 result-row form-check" role="none">
    <input class="form-check-input" data-collapse="{{name}}" type="checkbox" value="" id="check-{{name}}">
    <label for="check-{{name}}" role="menuitem" class="dropdown-item d-flex px-2 py-1 align-items-center form-check-label" tabindex="-1" aria-label="{{#str}}viewresultsuser, gradereport_grader, {{displayName}}{{/str}}">
        <div class="selected-option-info d-block pr-3">
            <span class="selected-option-text w-100 p-0">
                {{displayName}}
            </span>
            {{#category}}
                <span class="w-100 pull-left text-truncate small">
                    {{category}}
                </span>
            {{/category}}
        </div>
    </label>
</li>
