{{!
    @template gradereport_grader/search/resultset

    Wrapping template for returned result items.

    Context variables required for this template:
    * Foo - Bar.

    Example context (json):
    {}
}}
<li class="w-100 result-row form-check" role="none" id="result-row-{{id}}">
    <input class="form-check-input" data-collapse="{{.}}" type="checkbox" value="" id="check-{{.}}">
    <label class="form-check-label sr-only" for="check-{{.}}">
        {{.}}
    </label>
    <a role="menuitem" id="column-{{id}}" href="{{{link}}}" class="dropdown-item d-flex px-2 py-1 align-items-center" tabindex="-1" aria-label="{{#str}}viewresultsuser, gradereport_grader, column name{{/str}}">
        <div class="selected-option-info d-block pr-3">
            <span class="selected-option-text w-100 p-0">
                {{.}}
            </span>
            {{#category}}
                <span class="w-100 pull-left text-truncate small">
                    {{category}}
                </span>
            {{/category}}
        </div>
    </a>
</li>
